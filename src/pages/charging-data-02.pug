extends layout/main

block bodyClass
  - bodyClasses.push('charging-data-page')

block content
  .charging-header
    .container
      ul.header-steps.clearfix
        li.header-steps-item
          a(href="charging-data-01.html") 01
        li.header-steps-item
          a.current(href="charging-data-02.html") 02
        li.header-steps-item
          a(href="charging-data-03.html") 03
        li.header-steps-item
          a(href="charging-data-04.html") 04

      .charging-summary
        .summary-menu.clearfix
          .summary-price-model
            span.price 35€
            span /
            span.model F500
          a.btn-summary.btn-dropdown(href="#", data-dropdown="summary-dropdown")
            | Ver Resumen 
            span.icon.icon-arrow-down

        ul.summary-details.dropdown#summary-dropdown
          li.detail.detail-vehicle
            img.icon-vehicle(src='./img/icon-van-00.svg', alt='Van')
            | F/500
          li.detail.detail-place
            img.icon-place(src='./img/icon-place.svg', alt='Van')
            .from Carrer de Pere IV, 51, 08018
            .to Avenida Meridiana, 131, 08028
          li.detail.detail-contact
            span.icon.icon-user
            | Andrea
          li.detail.detail-time.clearfix
            .date
              span.icon.icon-calendar
              | 17/03/2018
            .hour
              span.icon.icon-clock
              | 11:15

  section.charging-data
    .container
      .charging-data-title.data-title-fixed
        h2 ¿Dónde recogemos la mercancía?
        .btn-select.btn-overlay(data-overlay="overlay-select-from")
          .icon.icon-house
          span.from-address Seleccione una ubicación
        .contact-people
          span.item-name Contacto:
          span.from-contact Nadie aún.

        .btn-select.btn-overlay(data-overlay="overlay-select-to")
          .icon.icon-box
          span.to-address Seleccione una ubicación
        .contact-people
          span.item-name Contacto:
          span.to-contact Nadie aún.

      
      .charging-data-nav
        a.prev(href="charging-data-01.html") 
          span.icon-arrow-left
          span  01
        a.next(href="charging-data-03.html")
          span 03
          span.icon-arrow-right

    .overlay#overlay-select-from
      include select-address-from
    .overlay#overlay-select-to
      include select-address-to

block js
  script(src="./js/menu.js")
  script(src="./js/dropdown.js")
  script(src="./js/overlay.js")
  script(src="./js/address.js")
  script(src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyCku4v2la7HjsiNn3FqCNtuhm3xnYcocLw")
  script(src="./js/maps.js")