extends layout/main

block bodyClass
  - bodyClasses.push('signin')

block content
  section.signin-signup-section
    .container.clearfixa
      form
        .form-description Rellena este formulario para que podamos darte de alta
        .clearfix
          .container-inputs
            .form-container
              input(id='user', placeholder='Usuario')
              span.form-icon.icon-user
            .form-container
              input(id='lastname', placeholder='Apellido')
              span.form-icon.icon-user
            .form-container
              input(id='telephone', placeholder='Teléfono')
              span.form-icon.icon-phone
            .form-container
              input(type='email', id='email', placeholder='Email')
              span.form-icon.icon-email
            .form-container
              input(type='password', id='password', placeholder='contraseña')
              span.form-icon.icon-padlock
        button.btn.btn-send Registrarme