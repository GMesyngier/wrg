extends layout/main

block bodyClass
  - bodyClasses.push('charging-data-page')

block content
  .charging-header
    .container
      ul.header-steps.clearfix
        li.header-steps-item
          a.current(href="charging-data-01.html") 01
        li.header-steps-item
          a(href="charging-data-02.html") 02
        li.header-steps-item
          a(href="charging-data-03.html") 03
        li.header-steps-item
          a(href="charging-data-04.html") 04

      include charging-summary

    .data-title-desktop
      .container
        h2 ¿Qué vehículo necesitas?

  section.charging-data
    .container.container-charging-data.clearfix
      .container.charging-vehicle
        .select-vehicle-section
          .charging-data-title
            h2 ¿Qué vehículo necesitas?
          form
            ul.select-vehicle-slider
              li.item-option
                input(type="radio", name="vehicle", value="1", id="vehicle1", checked)
                label(for="vehicle1")
                  h2.vehicle-title F/500
                  p.vehicle-description 2mts x 3mts 500kg
                  .image-vehicle
                    .icon-check
                    img.picture(src="../img/vehicle-01@2x.png", alt="F/500")
                    .price 35€
                  .vehicle-features.clearfix
                    .feature-item
                      .item-title Capacidad
                      .item-description 1 palet EU
                    .feature-item
                      .item-title Paso de rueda
                      .item-description 1,25m
                    .feature-item
                      .item-title Carga útil
                      .item-description 500kg
                    .feature-item
                      .item-title Capacidad cúbica
                      .item-description De 3 a 5m3
                
                  .instruction ( Haz clic para seleccionar )

              li.item-option
                input(type="radio", name="vehicle", value="2", id="vehicle2")
                label(for="vehicle2")
                  h2.vehicle-title F/1500
                  p.vehicle-description Máx 4mts x 5mts  900kg > 60km
                  .image-vehicle
                    .icon-check
                    img.picture(src="../img/vehicle-01@2x.png", alt="F/500")
                    .price 45€
                  .vehicle-features.clearfix
                    .feature-item
                      .item-title Capacidad
                      .item-description 1 palet EU
                    .feature-item
                      .item-title Paso de rueda
                      .item-description 1,25m
                    .feature-item
                      .item-title Carga útil
                      .item-description 500kg
                    .feature-item
                      .item-title Capacidad cúbica
                      .item-description De 3 a 5m3
                
                  .instruction ( Haz clic para seleccionar )

              li.item-option

                input(type="radio", name="vehicle", value="3", id="vehicle3")
                label(for="vehicle3")
                  h2.vehicle-title Carrozado
                  p.vehicle-description Máx 2mts x 3mts  500kg > 30km
                  .image-vehicle
                    .icon-check
                    img.picture(src="../img/vehicle-01@2x.png", alt="F/500")
                    .price 65€
                  .vehicle-features.clearfix
                    .feature-item
                      .item-title Capacidad
                      .item-description 1 palet EU
                    .feature-item
                      .item-title Paso de rueda
                      .item-description 1,25m
                    .feature-item
                      .item-title Carga útil
                      .item-description 500kg
                    .feature-item
                      .item-title Capacidad cúbica
                      .item-description De 3 a 5m3
                
                  .instruction ( Haz clic para seleccionar )

              li.item-option
                input(type="radio", name="vehicle", value="4", id="vehicle4")
                label(for="vehicle4")
                  h2.vehicle-title F/3500
                  p.vehicle-description Máx 2mts x 3mts  500kg > 30km
                  .image-vehicle
                    .icon-check
                    img.picture(src="../img/vehicle-01@2x.png", alt="F/500")
                    .price 95€
                  .vehicle-features.clearfix
                    .feature-item
                      .item-title Capacidad
                      .item-description 1 palet EU
                    .feature-item
                      .item-title Paso de rueda
                      .item-description 1,25m
                    .feature-item
                      .item-title Carga útil
                      .item-description 500kg
                    .feature-item
                      .item-title Capacidad cúbica
                      .item-description De 3 a 5m3
                
                  .instruction ( Haz clic para seleccionar )
                      
            .select-vehicle-slider-nav
              a(hred="#")
                img(src="../img/icon-van-00.svg", alt="F/500")
              a(hred="#")
                img(src="../img/icon-van-02.svg", alt="F/500")
              a(hred="#")
                img(src="../img/icon-van-03.svg", alt="F/500")
              a(hred="#")
                img(src="../img/icon-van-04.svg", alt="F/500")

    .container.container-charging-data
      .charging-data-nav
        a.next(href="charging-data-02.html")
          span Siguiente
          span.icon.icon-arrow-right

    .overlay#overlay-vehicle
      include select-vehicle

block js
  script(src="./js/menu.js")
  script(src="./js/dropdown.js")
  script(src="./js/overlay.js")
  script(src="./bower_components/slick-carousel/slick/slick.min.js")
  script(src="./js/slider-vehicle.js")