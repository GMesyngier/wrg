extends layout/main

block bodyClass
  - bodyClasses.push('charging-data-page')

block content
  .charging-header
    .container
      ul.header-steps.clearfix
        li.header-steps-item
          a(href="charging-data-01.html") 01
        li.header-steps-item
          a(href="charging-data-02.html") 02
        li.header-steps-item
          a(href="charging-data-03.html") 03
        li.header-steps-item
          a.current(href="charging-data-04.html") 04

      .charging-summary
        .summary-menu.clearfix
          .summary-price-model
            span.price 35â‚¬
            span /
            span.model F500
          a.btn-summary.btn-dropdown(href="#", data-dropdown="summary-dropdown")
            | Ver Resumen 
            span.icon.icon-arrow-down

        ul.summary-details.dropdown#summary-dropdown
          li.detail.detail-vehicle
            img.icon-vehicle(src='./img/icon-van-00.svg', alt='Van')
            | F/500
          li.detail.detail-place
            img.icon-place(src='./img/icon-place.svg', alt='Van')
            .from Carrer de Pere IV, 51, 08018
            .to Avenida Meridiana, 131, 08028
          li.detail.detail-contact
            span.icon.icon-user
            | Andrea
          li.detail.detail-time.clearfix
            .date
              span.icon.icon-calendar
              | 17/03/2018
            .hour
              span.icon.icon-clock
              | 11:15

  section.charging-data
    .container
      .charging-data-title.data-title-fixed
        h2 Datos de pago
      
      .btn.btn-overlay(data-overlay="special-needs") Tienes necesidades especiales?

    .charging-data-nav
      a.prev(href="charging-data-03.html") 
        span.icon-arrow-left
        span  03

    .overlay#special-needs
      include special-needs

block js
  script(src="./js/menu.js")
  script(src="./js/overlay.js")
  script(src="./js/dropdown.js")
  script(src="./js/special-needs.js")