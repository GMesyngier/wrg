extends layout/main

block bodyClass
  - bodyClasses.push('landing-page')

block content
  section.send-something-section
    .container.clearfix
      h1 <strong>Envía algo.</strong> Nosotros lo llevamos a su destino

      form.send-something-form(name='main-form')
        .form-container
          input(id='initial-place', placeholder='Dónde recogemos tu envío', required)
          span.form-icon.icon-house
        .form-container
          input(id='final-place', placeholder='Dónde entregamos tu envío', required)
          span.form-icon.icon-box
        
        .vehicle
          h4.text-center Qué vehículo necesitas
          .btn-vehicle.btn-overlay(data-overlay='overlay-vehicle')
